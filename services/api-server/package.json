{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for AushadX microservices",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "npm run test:unit && npm run test:standalone",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testMatch \"**/*.test.js\" --testPathIgnorePatterns \"standalone-test.js\" \"integration-test.js\"",
    "test:standalone": "node test/standalone-test.js",
    "test:integration": "node test/integration-test.js"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "fs": "^0.0.1-security",
    "http-proxy": "^1.18.1",
    "http-proxy-middleware": "^3.0.3",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
